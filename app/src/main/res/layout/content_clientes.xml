<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pt.ismai.atgest.ClientesActivity"
    tools:showIn="@layout/activity_clientes">

    <SearchView
        android:id="@+id/svClients"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="56dp"
        android:background="@android:color/transparent"
        android:closeIcon="@drawable/ic_close_white_24dp"
        android:searchIcon="@drawable/ic_search_white_24dp"
        android:iconifiedByDefault="false"
        android:theme="@style/SearchViewTheme"></SearchView>

    <ListView
        android:id="@+id/lvClients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>